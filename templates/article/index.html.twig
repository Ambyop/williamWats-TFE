{% extends 'base.html.twig' %}

{% block title %}Presse et Médias{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/articles.css') }}">
{% endblock %}

{% block body %}
    <main>
        <div class="title-box">
            <h1>Presse et Médias</h1>
        </div>
        <section>
            {% for article in articles %}
                <div class="article-box">
                    {% if not article.isIntegration %}
                        {% if article.image %}
                            <img src="{{ asset('img/articles/') ~  article.image }}" alt="">
                        {% else %}
                            <img src="{{ asset('img/articles/') ~  'default.png' }}" alt="">
                        {% endif %}
                        <h3>{{ article.title }}</h3>
                        <div class="read-article">
                            <a data-bs-toggle="modal" data-bs-target="#articleModal-{{ article.id }}">
                                lire l'article
                            </a>
                        </div>
                    {% else %}
                        {% if chcookieconsent_isCategoryAllowedByUser('social_media') == true %}
                            <!-- Article {{ article.id }} Facebook integration -->
                            <div class="fb-post-mobile">
                                <h3>{{ article.title }}</h3>
                                <p> Cet article est un poste facebook</p>
                            </div>
                            <div class="fb-widget">
                                <div class="fb-post " data-href="{{ article.content|raw }}" data-width="750" data-show-text="true">
                            </div>
                            </div>
                        {% else %}
                            <p class="no-cookie fb-widget">Cet élément requiert l'autorisation des cookies pour être affiché</p>
                            <div class="fb-post-mobile">
                                <h3>{{ article.title }}</h3>
                                <p> Cet article est un poste facebook</p>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            {% endfor %}
        </section>
    </main>

    <!-- Modal -->
    {% for article in articles %}
        {% if not article.isIntegration %}
            <!-- article {{ article.id }} Modal -->
            <div class="modal fade" id="articleModal-{{ article.id }}" tabindex="-1" aria-labelledby="articleModal-{{ article.id }}Label"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-dialog modal-xl modal-fullscreen-lg-down">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="articleModal-{{ article.id }}Label">{{ article.title }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {% if article.image %}
                                <img src="{{ asset('img/articles/') ~  article.image }}" alt="">
                            {% else %}
                                <img src="{{ asset('img/articles/') ~  'default.png' }}" alt="">
                            {% endif %}
                            {{ article.content|raw }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v10.0" nonce="Bmrg95e4"></script>
{% endblock %}
