{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }}User{% endblock %}

{% block body %}
    <h2 class="my-4">Gestion des Utilisateurs</h2>
    <table class="table table-hover" id="myTable"> <!-- id pour le DataTable id="myTable" -->
        <thead>
        <tr>
            <th>Image</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Classement</th>
            <th>Equipe</th>
            <th>Email</th>
            <th>Création du compte</th>
            <th>Dernière mise à jour</th>
            <th>Dernière connexion</th>
            <th>Rôle</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><img src="" alt="{{ user.id }}" class="admin-img-user align-middle"></td>
                <td class="align-middle">{{ user.firstname }}</td>
                <td class="align-middle">{{ user.lastname }}</td>
                <td class="align-middle">{{ user.ranking }}</td>
                {% if user.team %}
                    <td class="align-middle">{{ user.team.name }}</td>
                {% else %}
                    <td class="align-middle">-</td>
                {% endif %}
                <td class="align-middle">{{ user.email }}</td>
                <td class="align-middle">{{ user.createdAt|date("d/m/Y  H:i:s") }}</td>
                <td class="align-middle">{{ user.updatedAt|date("d/m/Y  H:i:s") }}</td>
                <td class="align-middle">{{ user.lastlogAt|date("d/m/Y  H:i:s") }}</td>
                <td class="align-middle">
                    <select class="form-select" aria-label="Default select example" onchange="document.location.href=this.value">
                    {% for role in user.roles %}
                        {% if role == 'ROLE_USER' %}
                            <option selected>Utilisateur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                        {% elseif role == 'ROLE_PLAYER' %}
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                            <option selected>Joueur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                        {% elseif role == 'ROLE_COACH' %}
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                            <option selected>Entraineur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                        {% elseif role == 'ROLE_ADMIN' %}
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                            <option value="{{ path('admin_user_rank', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                            <option selected>Administrateur</option>
                        {% endif %}
                    {% endfor %}
                    </select>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}