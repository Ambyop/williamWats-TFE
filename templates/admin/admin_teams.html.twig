{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminTeamsController!{% endblock %}

{% block body %}
    <div class="container-fluid my-4 mx-4">
        <h2 class="d-inline">Gestion des Equipes</h2>
        <button type="button" class="d-inline btn btn-primary float-end mx-4 my-2">Creer une équipe</button>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Equipe</th>
            <th>division</th>
            <th>Joueur 1</th>
            <th>Joueur 2</th>
            <th>Joueur 3</th>
            <th>Joueur 4</th>
            <th>Paramètres</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>{{ team.division }}</td>
                {% for user in team.users %}
                <td>{{ user.firstname }}  {{ user.lastname }}</td>
                {% endfor %}
                <td>dd</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
