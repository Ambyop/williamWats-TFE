{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }}Matchs{% endblock %}

{% block body %}
    <div class="container-fluid my-4">
        <h2 class="d-inline">Gestion des matchs</h2>
        <a href="{{ path('admin_match_add') }}" class="d-inline btn btn-primary float-end my-2 mx-4">Ajouter un match</a>
    </div>
    <table class="table table-striped" id="AdminTable">
        <thead>
        <tr>
            <th>Date et heure</th>
            <th>Lieu</th>
            <th>Equipe</th>
            <th>Joueurs Inscrits</th>
            <th>Dernière modification</th>
            <th>Paramètres</th>
        </tr>
        </thead>
        <tbody>
        {% for match in matchs %}
            {% set index = 4 %}
            <tr>
                <td class="align-middle">{{ match.date|date("d/m/Y à H:i") }}</td>
                <td class="align-middle">{{ match.location }}</td>
                <td class="align-middle">{{ match.team.name }}</td>
                <td class="align-middle">{{ match.user.count }}</td>
                <td class="align-middle">{{ match.updatedAt|date("d/m/Y H:i") }}</td>
                <td class="align-middle">
                    <a href="{{ path('admin_match_edit', { 'id': match.id}) }}" class="btn btn-secondary" title="Modifier"><i
                                class="icofont-pencil-alt-5"></i></a>
                    <a href="{{ path('admin_match_remove', { 'id': match.id}) }}" class="btn btn-danger" title="Supprimer"><i
                                class="icofont-bin"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Modal -->
    {% for match in matchs %}
        <!-- match {{ match.id }} Modal -->

    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#AdminTable').DataTable({
                "bStateSave": true,
                "bSort": true,
                "bProcessing": true,
                "bFilter": true,
                "bInfo": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                },
                "aoColumnDefs": [
                    {"bSortable": false, "aTargets": [5]},
                ]
            });
        });
    </script>
{% endblock %}
