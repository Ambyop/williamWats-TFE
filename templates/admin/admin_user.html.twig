{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }}Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid my-4">
        <h2 class="d-inline">Gestion des Utilisateurs</h2>
        <a href="{{ path('admin_user_add') }}" class="d-inline btn btn-primary float-end my-2 mx-4">Ajouter un utilisateur</a>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Image</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Classement</th>
            <th>Equipe</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Création du compte</th>
            <th>Dernière connexion</th>
            <th>Dernière mise à jour</th>
            <th>Rôles</th>
            <th>Gestion</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a data-bs-toggle="modal" data-bs-target="#user-{{ user.id }}-profile">
                        {% if user.image %}
                            <img src="{{ asset('img/users/') ~  user.image }}" alt="{{ user.id }}" class="admin-user-avatar align-middle">
                        {% else %}
                            <img src="{{ asset('img/users/') ~  'default.png' }}" alt="{{ user.id }}" class="admin-user-avatar align-middle">
                        {% endif %}
                    </a></td>
                <td class="align-middle"><a data-bs-toggle="modal" data-bs-target="#user-{{ user.id }}-profile">
                        {{ user.firstname }}
                    </a></td>
                <td class="align-middle"><a data-bs-toggle="modal" data-bs-target="#user-{{ user.id }}-profile">
                        {{ user.lastname }}
                    </a></td>
                <td class="align-middle">
                    <div class="ranking-box">
                        <a id="ranking-down" data-user-id="{{ user.id }}"><i class="icofont-arrow-down"></i></a>
                        {% if user.ranking %}
                            <span id="ranking-show-{{ user.id }}" data-user-ranking="{{ user.ranking }}">{{ user.ranking }}</span>
                        {% else %}
                            <span id="ranking-show-{{ user.id }}" data-user-ranking="NC">NC</span>
                        {% endif %}
                        <a id="ranking-up" data-user-id="{{ user.id }}"><i class="icofont-arrow-up"></i></a>
                    </div>
                </td>
                {% if user.team %}
                    <td class="align-middle">{{ user.team.name }}</td>
                {% else %}
                    <td class="align-middle">Aucune Equipe</td>
                {% endif %}
                <td class="align-middle">{{ user.email }}</td>
                {% if not user.phoneNumber %}
                    <td class="align-middle">-</td>
                {% else %}
                    <td class="align-middle">{{ user.phoneNumber }}</td>
                {% endif %}
                <td class="align-middle">{{ user.createdAt|date("d/m/Y H:i:s") }}</td>
                <td class="align-middle">{{ user.lastlogAt|date("d/m/Y H:i:s") }}</td>
                <td class="align-middle">{{ user.updatedAt|date("d/m/Y H:i:s") }}</td>
                {% if app.user != user %}
                    <td class="align-middle">
                        <select class="form-select" aria-label="Default select example" onchange="document.location.href=this.value">
                            {% for role in user.roles %}
                                {% if role == 'ROLE_USER' %}
                                    <option selected>Utilisateur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                                {% elseif role == 'ROLE_PLAYER' %}
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                                    <option selected>Joueur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                                {% elseif role == 'ROLE_COACH' %}
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                                    <option selected>Entraineur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_ADMIN"}) }}">Administrateur</option>
                                {% elseif role == 'ROLE_ADMIN' %}
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_USER"}) }}">Utilisateur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_PLAYER"}) }}">Joueur</option>
                                    <option value="{{ path('admin_user_role', {"id":user.id, "role":"ROLE_COACH"}) }}">Entraineur</option>
                                    <option selected>Administrateur</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                {% else %}
                    <td class="align-middle">
                        <select class="form-select" aria-label="Default select example" onchange="document.location.href=this.value"
                                title="Vous ne pouvez pas changer votre propre grade" disabled>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <option selected>Administrateur</option>
                                {% elseif role == 'ROLE_SUPER_ADMIN' %}
                                    <option selected>Administrateur</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                {% endif %}
                <td class="align-middle">
                    {% if app.user != user %}
                        {% if not user.isdisabled %}
                            <a href="{{ path('admin_user_activation', {"id" : user.id}) }}" class="btn btn-success"
                               title="Activé"><i class="icofont-user-alt-2"></i></a>
                        {% else %}
                            <a href="{{ path('admin_user_activation', {"id" : user.id}) }}" class="btn btn-danger"
                               title="Désactivé"><i class="icofont-user-alt-2"></i></a>
                        {% endif %}
                        <a href="{{ path('admin_user_remove', {"id" : user.id}) }}" class="btn btn-warning"
                           title="Supprimer"><i class="icofont-bin"></i></a>
                    {% else %}
                        <a class="btn btn-success disabled" title="Vous ne pouvez pas changer votre propre status"><i class="icofont-user-alt-2"></i></a>
                        <a class="btn btn-warning disabled" title="Vous ne pouvez pas supprimer votre propre compte"><i class="icofont-bin"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# User profile modal #}
    {% for user in users %}
        <div class="modal fade" id="user-{{ user.id }}-profile" tabindex="-1" aria-labelledby="user-{{ user.id }}-profile" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="user-{{ user.id }}-profile">Visuel du profil de: <strong>{{ user.firstname }} {{ user.lastname|upper }}</strong></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="ratio ratio-16x9">
                            <div class="row my-2">
                                <div class="col-lg-8 order-lg-2">
                                    <div class="row">
                                        <div class="col-6">
                                            <h5>Nom de l'utilisateur:</h5>
                                            <p>
                                                {{ user.firstname }} {{ user.lastname|upper }}
                                            </p>
                                            <h5>Email</h5>
                                            <p>
                                                {{ user.email }}
                                            </p>
                                            <h5>Numéro de téléphone</h5>
                                            <p>
                                                {{ user.phoneNumber }}
                                            </p>
                                            <h5>Classement:</h5>
                                            <p id="ranking-profile-{{ user.id }}">
                                                {{ user.ranking }}
                                            </p>
                                            <h5>Rôle:</h5>
                                            <button type="button" class="btn btn-outline-primary disabled" data-toggle="tooltip"
                                                    data-placement="bottom" title="{{ user.roles|json_encode }}">
                                                {% if user.roles|json_encode == '["ROLE_ADMIN"]' %} Administrateur
                                                {% elseif user.roles|json_encode == '["ROLE_SUPER_ADMIN"]' %} Super-Administrateur
                                                {% elseif user.roles|json_encode == '["ROLE_PLAYER"]' %} Joueur
                                                {% elseif user.roles|json_encode == '["ROLE_COACH"]' %} Entraîneur
                                                {% else %} Utilisateur
                                                {% endif %}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 order-lg-1 text-center">
                                    {% if user.image %}
                                        <img src="{{ asset('img/users/') ~ user.image }}" class="mx-auto img-fluid img-circle d-block"
                                             alt="Image de profil">
                                    {% else %}
                                        <img src="{{ asset('img/users/') ~ 'default.png' }}" class="mx-auto img-fluid img-circle d-block"
                                             alt="Image de profil">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/AdminUser.js') }}"></script>
{% endblock %}