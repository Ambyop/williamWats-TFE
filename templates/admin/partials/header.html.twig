<!-- View flash messages -->
{% block flash %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}"> {{ message }}</div>
        {% endfor %}
    {% endfor %}
{% endblock %}