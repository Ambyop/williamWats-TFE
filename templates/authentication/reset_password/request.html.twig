{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/reset-password-request.css') }}">
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <main>
        <div class="reset-password">
            <div class="reset-password-box">
                <h2 >Récupération de mot de passe</h2>
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="small-box">
                    <small>
                        Entrez votre adresse mail et nous vous enverrons par mail un lien afin de réinitialiser votre mot de passe
                    </small>
                </div>
                <button class="btn btn-primary">Envoyer le mail</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </main>
{% endblock %}